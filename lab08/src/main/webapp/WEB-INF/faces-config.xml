<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
    version="2.3">

	<navigation-rule>
		<navigation-case>
			<from-view-id>/index.xhtml</from-view-id>
			<from-action>#{logIn.logIn}</from-action>
			<from-outcome>admin</from-outcome>
			<to-view-id>/admin.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-view-id>/index.xhtml</from-view-id>
			<from-action>#{logIn.logIn}</from-action>
			<from-outcome>author</from-outcome>
			<to-view-id>/author.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-view-id>/index.xhtml</from-view-id>
			<from-action>#{logIn.logIn}</from-action>
			<from-outcome>reviewer</from-outcome>
			<to-view-id>/reviewer.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-view-id>/index.xhtml</from-view-id>
			<from-action>#{signIn.signIn}</from-action>
			<from-outcome>author</from-outcome>
			<to-view-id>/author.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-view-id>/index.xhtml</from-view-id>
			<from-action>#{signIn.signIn}</from-action>
			<from-outcome>reviewer</from-outcome>
			<to-view-id>/reviewer.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
</faces-config>